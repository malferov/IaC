{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-02c71d7a",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "packer-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "file",
    "source": "../app/app.py",
    "destination": "~/"
  },
  {
    "type": "file",
    "source": "../app/app.service",
    "destination": "~/"
  },
  {
    "type": "shell",
    "inline":[
      "sudo mkdir /opt/app",
      "sudo chown centos:centos /opt/app",
      "mv ~/app.py /opt/app/",
      "sudo mv ~/app.service /etc/systemd/system/",
      "sudo yum -y install epel-release mc",
      "sudo yum -y install python-pip",
      "sudo pip install Flask flask-restful"
    ]
  },
  {
    "type": "shell",
    "inline":[
      "sudo systemctl enable app",
      "sudo systemctl start app"
    ]
  }],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    },
    {
      "type": "shell-local",
      "inline": [
         "echo ami_id = $(jq '.builds[].artifact_id/\":\"|last' manifest.json) > ../packer.auto.tfvars",
         "cp ../packer.auto.tfvars ../segregation/"
      ]
    }
  ]
}
