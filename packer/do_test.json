{
  "variables": {
    "do_api_token": ""
  },
  "builders": [
  {
    "type": "digitalocean",
    "api_token": "{{user `do_api_token`}}",
    "image": "centos-7-x64",
    "region": "ams2",
    "size": "512mb",
    "ssh_username": "root"
  }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline":[
        "sudo yum -y install epel-release",
        "sudo yum -y install nginx",
        "sudo systemctl start nginx"
      ]
    }
  ]
}
